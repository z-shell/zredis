 ztie -d db/redis -f $db1 string
 ztie -d db/redis -f $db2 string2
 string=testdata
 string2=$string
 zuntie string
 zuntie string2
 ztie -d db/redis -f $db1 string
 ztie -d db/redis -f $db2 string2
